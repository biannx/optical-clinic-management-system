  <body>
    <%- include("../partials/client-navigation-guest.ejs") %>

    <header>
      <div class="banner">
        <div class="container">
          <div class="tagline">
            <h1>Expert eyecare</h1>
            <h2>Latest Eyewear</h2>
          </div>
          <p class="lead">
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusamus
            error incidunt earum inventore! Lorem Ipsum
          </p>
          <div class="banner-price">
            <h5 class="price-start-text">Price starts at</h5>
            <h2 class="price-start">P799</h2>
          </div>
          <div class="shop-now-div">
            <a href="/products" class="btn btn-default"> shop now </a>
          </div>
        </div>
      </div>
    </header>

    <div class="featured-item">
      <div
        class="container d-flex justify-content-lg-between ustify-content-md-between flex-wrap align-items-center"
      >
        <h1>JUST IN</h1>
        <a href="/products">VIEW ALL</a>
      </div>
      <div class="container-fluid">
        <div
          id="carouselFeaturedProduct"
          class="carousel slide carousel-dark"
          data-bs-ride="carousel"
        >
          <div class="carousel-indicators my-3">
            <button
              type="button"
              data-bs-target="#carouselFeaturedProduct"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselFeaturedProduct"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="container">
                <div class="row">
                  <% if(products) { %>
                    <% let index = 0; %>
                  <% for(let product of products) { %>
                    <% if(++ index == 5) break; %>
                  <div class="col-lg-3 col-md-6 col-6 col-6">
                    <div class="wrapper">
                      <!-- 1 -->
                      <div class="card">
                        <a href="../client/products/all-products.html">
                          <img
                            src="/images/<%= product.image %>"
                            class="card-img-top"
                            alt="..."
                          />
                          <div class="label-new">
                            <span>new</span>
                          </div>
                        </a>
                        <div class="card-body">
                          <a href="../client/products/all-products.html">
                            <h6 class="card-title">
                              <%= product.name %>
                            </h6>
                          </a>
                          <p class="card-text"><%= product.lens %></p>
                          <div class="d-flex justify-content-between">
                            <p class="price">
                              <i
                                class="fas fa-tag px-1 tag"
                                aria-hidden="true"
                              ></i>
                              <span class="px-1">Php <%= product.price %></span>
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }} %>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <div class="container">
                <div class="row">
                  <div class="col-lg-3 col-md-6 col-6">
                    <div class="wrapper">
                      <!-- 1 -->
                      <div class="card">
                        <a href="../client/products/all-products.html">
                          <img
                            src="/images/product-img.png"
                            class="card-img-top"
                            alt="..."
                          />
                          <div class="label-new">
                            <span>new</span>
                          </div>
                        </a>
                        <div class="card-body">
                          <a href="../client/products/all-products.html">
                            <h6 class="card-title">
                              Original Blue Spring Hinge
                            </h6>
                          </a>
                          <p class="card-text">Normal, UV Lens</p>
                          <div class="d-flex justify-content-between">
                            <p class="price">
                              <i
                                class="fas fa-tag px-1 tag"
                                aria-hidden="true"
                              ></i>
                              <span class="px-1">Php 2,280</span>
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6 col-6">
                    <div class="wrapper">
                      <!-- 2 -->
                      <div class="card">
                        <a href="../client/products/all-products.html">
                          <img
                            src="/images/product-img.png"
                            class="card-img-top"
                            alt="..."
                          />
                          <div class="label-new">
                            <span>new</span>
                          </div>
                        </a>
                        <div class="card-body">
                          <a href="../client/products/all-products.html">
                            <h6 class="card-title">
                              Original Blue Spring Hinge
                            </h6>
                          </a>
                          <p class="card-text">Normal, UV Lens</p>
                          <div class="d-flex justify-content-between">
                            <p class="price">
