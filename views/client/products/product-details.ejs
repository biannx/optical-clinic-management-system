    <%- include("../../partials/client-navigation-guest.ejs") %>

    <div class="container product-details">
      <div class="d-flex align-items-center my-5">
        <a href="/products" class="back-page">
          <i
            class="fa fa-arrow-left to-back-link"
            aria-hidden="true"
            title="Go back"
          ></i>
        </a>
        <span class="px-3 page-title">Go Back</span>
      </div>

      <div class="row">
        <div class="col-lg-7 col-sm-12 d-flex justify-content-center">
          <img
            src="/images/<%= product.image %>"
            class="img-prod-details"
            alt="Product Image"
          />
        </div>
        <div class="col-lg-5 col-sm-12">
          <form method="POST" action="add-to-cart/<%= product._id %>">
            <h2 class="product-name"><%= product.name %></h2>
            <p class="lens-type-text">Lens Type</p>
            <label class="btn btn-outline-primary" for="btn-check-normal"
              ><%= product.lens %></label
            >
            <br /><br />
            <h4>description</h4>
            <p><%= product.description %></p>
            <div id="table-category">
              <div class="tr">
                <div class="td">width:</div>
                <div class="td prod-img-category-text"><%= product.width %></div>
              </div>
              <div class="tr">
                <div class="td">material:</div>
                <div class="td prod-img-category-text"><%= product.material %></div>
              </div>
              <div class="tr">
                <div class="td">hinge:</div>
                <div class="td prod-img-category-text"><%= product.hinge %></div>
              </div>
              <div class="tr">
                <div class="td">finish:</div>
                <div class="td prod-img-category-text"><%= product.finish %></div>
              </div>
              <div class="tr">
                <div class="td">price:</div>
                <div class="td prod-img-category-text">Php <%= product.price %></div>
              </div>
              <div class="tr">
                <div class="td">No. of Items</div>
                <input
                  type="number"
                  class="w-50 text-center"
                  min="1"
                  max="<%= product.stock %>"
                  value="1"
                  name="qty"
                  required
                />
                <input type="hidden" name="image" value="<%= product.image %>">
                <input type="hidden" name="user_id" value="<%= user._id %>">
                <input type="hidden" name="item_id" value="<%= product._id %>">
                <input type="hidden" name="item_name" value="<%= product.name %>">
                <input type="hidden" name="item_price" value="<%= product.price %>">
                <input type="hidden" name="lens" value="<%= product.lens %>">
                <input type="hidden" name="width" value="<%= product.width %>">
                <input type="hidden" name="material" value="<%= product.material %>">
                <input type="hidden" name="hinge" value="<%= product.hinge %>">
                <input type="hidden" name="finish" value="<%= product.finish %>">
              </div>
            </div>
            <div class="d-flex my-3">
 
              <button type="submit" class="btn add-to-cart flex-fill">
                add to cart
              </button>
            </div>
          </form>
        </div>
      </div>

